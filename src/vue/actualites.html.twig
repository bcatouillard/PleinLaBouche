{% extends "base.html.twig" %}

{% block title %} Actualités {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Actualités</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-4">
                    <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fstephanie59.brebion%2F&tabs=timeline&width=340&height=500&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId" 
                            width="800" height="500" scrolling="yes" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
                </div>
            </div>
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal">Menu</h1>
                {% if form.menu is defined %}
                    <div>
                    {% if form.menu != null %}
                        <div class="col-4">
                            <div class="card" style="min-height:12rem;">
                                <div class="card-body">
                                    <h5 class="card-title" align="center">{{form.menu.designation}}</h5>
                                    {% if form.menu.nom is not empty %}
                                        <img src="{{form.directory}}{{form.menu.nom}}" class="card-img" style="max-height: 9rem;">
                                    {% endif %}
                                    <p class="card-text">{{form.menu.description}} <br>Pour {{form.menu.nbPersonne}}{%if form.menu.nbPersonne >1%}personnes{%else%}personne{%endif%}<br> Prix : {{form.menu.prix}}€</p>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <h1 class="h3 mb-3 font-weight-normal">Aucun menu</h1>
                    {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
{% endblock %}