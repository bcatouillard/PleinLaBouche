{% extends "base.html.twig" %}

{% block title %} Modifier une photo {% endblock %}

{% block style %} <link href="css/form.css" rel="stylesheet">    {% endblock %}

{% block body %}
    
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <div class="alert alert-success col-sm-6 md-7 offset-3" role="alert"><p class="col-sm-7 md-8 offset-5">{{form.message}}</p>
                <a class="col-sm-7 md-8 offset-5" href="index.php?page=admin-plat-liste">Retour à la liste des plats</a>
            </div>
        {% else %}
            <div class="alert alert-danger col-sm-6 md-7 offset-3" role="alert"><p class="col-sm-7 md-8 offset-5">{{form.message}}</p>
                <a class="col-sm-7 md-8 offset-5" href="index.php?page=admin-plat-liste">Retour à la liste des plats</a>
            </div>
        {% endif%}
    {% else %}
        {% if form.photo is defined %}
            {% if form.photo != null %}
                <div class="container">
                    <h1 class="h3 mb-3 font-weight-normal">Modifier la photo</h1>
                    <form class="form-group" action="index.php?page=admin-photo-modif" method="post" enctype="multipart/form-data">
                        <div class="row offset-3"
                            <div class="col-md-8">
                                <img src="{{form.directory}}{{form.photo.nom}}" class="img"/>
                                <div class="col-md-7 offset-md-0">
                                    <input type="file" class="form-control-file" name="photo"/>
                                    <button class="btn btn-lg btn-block btn-outline-primary" type="submit" name="btModifier">Modifier</button>
                                </div>
                                <input type="hidden" name="id" value="{{ form.photo.id }}"/>
                            </div>
                            </div>
                    </form>
                </div>
            {% else %}
                <div class="alert alert-danger col-sm-6 md-7 offset-3" role="alert"><p class="col-sm-7 md-8 offset-5">{{form.message}}</p>
                    <a class="col-sm-7 md-8 offset-5" href="index.php?page=admin-plat-liste">Retour à la liste des plats</a>
                </div>
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}