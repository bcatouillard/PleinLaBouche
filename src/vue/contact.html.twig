{% extends "base.html.twig" %}

{% block title %} Contact {% endblock %}
{% block style %} <link href="css/contact.css" rel="stylesheet">  
                  <link href="css/FontAwesome/fontawesome.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <div class="alert alert-success col-sm-6 md-7 offset-3" role="alert"><p class="col-sm-7 md-8 offset-5">{{form.message}}</p>
            </div>
        {% else %}
            <div class="alert alert-danger col-sm-6 md-7 offset-3" role="alert"><p class="col-sm-7 md-8 offset-5">{{form.message}}</p>
            </div>
        {% endif%}
    {% endif %}
    
    <div class="container">
        <h1>Me contacter :</h1>
        <div class="row">
            <div class="col-md-6">
                <div>
                    <form class="form-group" method="post" action="index.php?page=contact">
                        <fieldset>
                            <div class="form-group">
                                <div class="col-md-10 offset-md-1">
                                    <input id="lname" name="name" type="text" placeholder="Nom" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-10 offset-md-1">
                                    <input id="fname" name="fname" type="text" placeholder="Prénom" class="form-control">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-10 offset-md-1">
                                    <input id="email" name="mail" type="text" placeholder="Adresse mail" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 offset-md-1">
                                    <input id="phone" name="tel" type="text" placeholder="Téléphone" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10 offset-md-1">
                                    <textarea class="form-control textarea" id="message" name="msg" placeholder="Ecrivez votre message..." rows="7"></textarea>
                                </div>
                            </div>
                            <div class="form-group col-md-12 offset-1">
                                <div class="g-recaptcha" data-sitekey="6Le1h4cUAAAAAMSPt_r_q71DGOcy8OUTB2xN4O5l"></div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 text-xs-center">
                                    <button id="btEnvoyer" type="submit" name="btEnvoyer" class="btEnvoyer">Envoyer</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                        <div class="text-xs-center" align="center">
                            <h4>Adresse</h4>
                            <div>
                            45 rue Cochette<br/>
                            59660 Merville<br/>
                            Tel : 06 34 02 84 50<br/>
                            </div>
                            <hr class="col-md-4">
                            <div>
                                <iframe class="col-xs-10" src=https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1264.8193483370742!2d2.647701900645309!3d50.65240089818837!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47dcdf8bd4308555%3A0x89a22e3f98e9b485!2s45+Rue+Cochette%2C+59660+Merville!5e0!3m2!1sfr!2sfr!4v1546864988018""  frameborder="0" allowfullscreen></iframe>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    
    <br>
    <hr class="col-md-4">
    
    <div class="container">
        <h1 align="center">Vous pouvez aussi me retrouver ici :</h1>
            <div class="social-networks" align="center">
            <a href="https://www.facebook.com/stephanie59.brebion/" target="_blank" class="facebook"><i class="fa fa-facebook-official"></i></a>
            <a href="https://www.instagram.com/chef_fanny_/?hl=fr" target="_blank" class="instagram"><i class="fa fa-instagram"></i></a>
            <a href="https://plus.google.com/115788768945868215596" target="_blank" class="instagram"><i class="fa fa-google-plus-circle"></i></a>
        </div>
    </div>
    <hr>
    <br>
{% endblock %}

{% block js %} 
         <script src='https://www.google.com/recaptcha/api.js'></script>  
         <script src="js/success.js"></script>
{% endblock %}